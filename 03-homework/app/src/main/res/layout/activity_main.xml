<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:padding="8dp">

    <TextView
        android:id="@+id/result_display"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="end|center_vertical"
        android:background="@color/button_bg"
        android:textColor="@color/text_color"
        android:textSize="48sp"
        android:padding="16dp"
        android:text="0" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:rowCount="5"
        android:columnCount="4"
        android:padding="8dp">

        <Button
            android:id="@+id/button_clear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/button_clear"
            android:backgroundTint="@color/button_bg"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/button_sign"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/button_sign"
            android:backgroundTint="@color/button_bg"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/button_square"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/button_square"
            android:backgroundTint="@color/button_bg"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/button_divide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/button_divide"
            android:backgroundTint="@color/operator_button_bg"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/button_7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/button_7"
            android:backgroundTint="@color/button_bg"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/button_8"
            android:backgroundTint="@color/button_bg"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/button_9"
            android:backgroundTint="@color/button_bg"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/button_multiply"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/button_multiply"
            android:backgroundTint="@color/operator_button_bg"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/button_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/button_4"
            android:backgroundTint="@color/button_bg"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/button_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/button_5"
            android:backgroundTint="@color/button_bg"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/button_6"
            android:backgroundTint="@color/button_bg"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/button_subtract"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/button_subtract"
            android:backgroundTint="@color/operator_button_bg"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/button_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/button_1"
            android:backgroundTint="@color/button_bg"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/button_2"
            android:backgroundTint="@color/button_bg"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/button_3"
            android:backgroundTint="@color/button_bg"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/button_add"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/button_add"
            android:backgroundTint="@color/operator_button_bg"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/button_percent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/button_percent"
            android:backgroundTint="@color/button_bg"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/button_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/button_0"
            android:backgroundTint="@color/button_bg"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/button_dot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/button_dot"
            android:backgroundTint="@color/button_bg"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/button_equals"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/button_equals"
            android:backgroundTint="@color/operator_button_bg"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_large" />

    </GridLayout>
</LinearLayout>
